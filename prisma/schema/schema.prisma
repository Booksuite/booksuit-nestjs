datasource db {
    provider = "postgres"
    url      = env("DATABASE_URL")
}

generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["prismaSchemaFolder"]
}

generator class_validator {
    provider = "prisma-class-validator-generator"
    output   = "../../src/common/models/generated"
}

